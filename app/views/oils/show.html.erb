<h2><%= @oil.name %></h2>

<p>
  <strong>Name:</strong>
  <%= @oil.name %>


  <strong>Image:</strong>
  <%= image_tag @oil.photo_url %>

<br>
<br>
<br>
<br>
  <strong>Benefits:</strong>
  <%= @oil.benefits %>
</p>

<h3>Comments</h3>
<% @oil.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>


<h3>Add a comment:</h3>
<%= form_for([@oil, @oil.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>


<%= link_to 'Delete', oil_path(@oil),
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
<%= link_to 'Edit', edit_oil_path(@oil) %>
<%= link_to 'Back', oils_path %>
