<h1><%= @oil.name %></h1>

<p>

  <!-- <strong>Image:</strong> -->
  <%= image_tag @oil.photo_url %>
  <ul class = "oil-discription">
    <li>
      <h2>Benefits:</h2>
    <h3><%= @oil.benefits %></h3>
    </li>
    <li>
      <h2>Decriptions:</h2>
      <h3><%= @oil.descriptions %></h3>
    </li>
    <li>
      <h2>Uses:</h2>
      <h3><%= @oil.uses %></h3>
    </li>
    <li>
      <h2>Direction:</h2>
      <h3><%= @oil.directions %></h3>
    </li>
    <li>
      <h2>Cautions:</h2>
      <h3><%= @oil.cautions %></h3>
    </li>
  </ul>



</p>



<h3>Comments</h3>
<% @oil.comments.each do |comment| %>
<p>
  <strong>Name:</strong>
  <%= comment.commenter %>
</p>

<p>
  <strong>Said:</strong>
  <%= comment.body %>
</p>

<%= link_to "Edit", edit_oil_comment_path(@oil, comment) %> |
<%= link_to "Delete", oil_comment_path(@oil, comment), method: :delete %>

<% end %>


<h3>Add a comment:</h3>
<%= form_for([@oil, @oil.comments.build]) do |f| %>
<p>
  <%= f.label :name %><br>
  <%= f.text_field :commenter %>
</p>
<p>
  <%= f.label :said %><br>
  <%= f.text_area :body %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>


<%= link_to 'Delete', oil_path(@oil),
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
<%= link_to 'Edit', edit_oil_path(@oil) %>
<%= link_to 'Back', oils_path %>
